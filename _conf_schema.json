{
    "sources": {
        "type": "template_list",
        "description": "图源配置列表",
        "hint": "管理多个不同的图源规则",
        "default": [
            {
                "__template_key": "default_source",
                "name": "默认随机图片",
                "keywords": ["涩涩", "来点图"],
                "apis": ["https://api.example.com/img"],
                "use_forward": false,
                "list_mode": "无限制",
                "group_list": [],
                "recall_delay": 0
            }
        ],
        "templates": {
            "default_source": {
                "name": "图源配置",
                "hint": "创建一个新的图源规则",
                "items": {
                    "name": {
                        "type": "string",
                        "description": "配置名称",
                        "default": "新图源"
                    },
                    "keywords": {
                        "type": "list",
                        "description": "触发指令列表",
                        "default": ["涩涩"]
                    },
                    "apis": {
                        "type": "list",
                        "description": "API 链接列表",
                        "default": []
                    },
                    "use_forward": {
                        "type": "bool",
                        "description": "使用合并转发发送",
                        "hint": "开启后，此图源发出的图片/链接会被伪装在合并转发卡片内，防吞效果极佳",
                        "default": false
                    },
                    "list_mode": {
                        "type": "string",
                        "description": "分群管理",
                        "hint": "黑名单表示在以下群组不响应，白名单表示仅在以下群组响应",
                        "options": ["无限制", "黑名单", "白名单"],
                        "default": "无限制"
                    },
                    "group_list": {
                        "type": "list",
                        "description": "群号列表",
                        "hint": "如选择黑/白名单则适用此列表",
                        "default": []
                    },
                    "recall_delay": {
                        "type": "int",
                        "description": "自动撤回时间 (秒)",
                        "hint": "发送后多久自动撤回。0 表示不撤回",
                        "default": 0,
                        "minimum": 0
                    }
                }
            }
        }
    },
    "catgirl_enable": {
        "type": "bool",
        "description": "开启猫娘模式",
        "hint": "开启后，所有文本提示末尾会自动加上自定义的后缀词",
        "default": false
    },
    "catgirl_suffix": {
        "type": "string",
        "description": "猫娘模式后缀词",
        "default": "喵~"
    },
    "send_retries": {
        "type": "int",
        "description": "发送失败重试次数",
        "default": 3,
        "minimum": 0,
        "maximum": 10
    },
    "compress_enable": {
        "type": "bool",
        "description": "开启大图自动压缩",
        "default": true
    },
    "compress_threshold": {
        "type": "int",
        "description": "压缩阈值 (MB)",
        "default": 5,
        "minimum": 1
    },
    "compress_quality": {
        "type": "int",
        "description": "压缩质量 (1-100)",
        "default": 85
    },
    "cooldown": {
        "type": "int",
        "description": "全局指令冷却时间 (秒)",
        "default": 10
    },
    "verify_ssl": {
        "type": "bool",
        "description": "验证 SSL 证书",
        "default": true
    }
}
